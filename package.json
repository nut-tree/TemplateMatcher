{
  "name": "@udarrr/template-matcher",
  "version": "1.0.7",
  "main": "dist/index",
  "typings": "dist/index",
  "description": "Locate images on your screen using template matching in nut.js",
  "author": {
    "name": "Simon Hofmann & Siarhei Kliushnikau",
    "email": "kontakt@s1h.org",
    "url": "https://s1h.org"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/udarrr/TemplateMatcher.git"
  },
  "bugs": {
    "url": "https://github.com/udarrr/TemplateMatcher/issues"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
